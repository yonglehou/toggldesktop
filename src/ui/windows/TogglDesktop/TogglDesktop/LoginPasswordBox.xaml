<UserControl x:Class="TogglDesktop.LoginPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="240" Height="41">
    <Grid>
        <PasswordBox x:Name="passwordBox" x:FieldModifier="private"
                 HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"
                 BorderThickness="0" Padding="14, 15, 14, 0"
                 FontSize="14" FontFamily="/TogglDesktop;component/Resources/Fonts/#Roboto"
                 Background="#ebebeb">
            <PasswordBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="3"></Setter>
                </Style>
            </PasswordBox.Resources>
        </PasswordBox>
        <Label x:Name="emptyLabel" x:FieldModifier="private"
               HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"
               BorderThickness="0" Padding="14, 15, 14, 0"
               FontSize="14" FontFamily="/TogglDesktop;component/Resources/Fonts/#Roboto"
               IsHitTestVisible="False"
               Panel.ZIndex="1" Foreground="#a1a1a1" />
    </Grid>
</UserControl>
